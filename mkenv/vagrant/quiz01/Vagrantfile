Vagrant.configure("2") do |config|
  config.vm.box = "generic/openbsd6"

  config.vm.provider "virtualbox" do |v|
    v.default_nic_type = "82543GC"
  end

  config.vm.define :h1 do | h1 |
    h1.vm.hostname = "h1"
    h1.vm.network "private_network", ip: "172.16.0.10", netmask: "255.255.255.0", virtualbox__intnet: "q01_a", nic_type: "virtio"
  end

  config.vm.define :h2 do | h2 |
    h2.vm.hostname = "h2"
    h2.vm.network "private_network", ip: "172.16.0.20", netmask: "255.255.255.0", virtualbox__intnet: "q01_a", nic_type: "virtio"
    h2.vm.network "private_network", ip: "172.20.0.20", netmask: "255.255.255.0", virtualbox__intnet: "q01_b", nic_type: "virtio"
  end

  config.vm.define :h3 do | h3 |
    h3.vm.hostname = "h3"
    h3.vm.network "private_network", ip: "172.20.0.30", netmask: "255.255.255.0", virtualbox__intnet: "q01_b", nic_type: "virtio"
  end
end
